<?xml version="1.0" encoding="utf-8"?>

<com.vashisthg.androidl.widget.ObservableScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:id="@+id/imageView3"
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/activity_transition_text_size"
                android:id="@+id/textView"
                android:text="@string/imageViewTitle1"/>
            <ImageView
                android:id="@+id/imageView4"
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/activity_transition_text_size"
                android:text="@string/imageViewTitle1"/>
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/activity_transition_text_size"
                android:text="@string/imageViewTitle1"/>
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/activity_transition_text_size"
                android:text="@string/imageViewTitle1"/>
            <ImageView
                android:src="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_transitions_image_view_height"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/photo_view_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/activity_transitions_image_view"/>
        </FrameLayout>
        <LinearLayout style="@style/HeaderBar"
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <include layout="@layout/toolbar_actionbar" /> <!-- placeholder, empty except on L -->

            <!-- Session title -->
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/keyline_2"
                android:layout_marginRight="@dimen/keyline_1"
                android:text="@string/placeholder_activity_transition_title"
                android:id="@+id/session_title"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_large"
                android:lineSpacingMultiplier="1.1"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textColor="@color/body_text_1_inverse"
                android:layout_gravity="start"
                android:textAlignment="viewStart" />

            <!-- Session subtitle -->
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/keyline_2"
                android:layout_marginRight="@dimen/keyline_1"
                android:text="@string/placeholder_activity_transition_subtitle"
                android:id="@+id/session_subtitle"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/body_text_2_inverse"
                android:layout_gravity="start"
                android:textAlignment="viewStart" />

        </LinearLayout>
    </FrameLayout>
</com.vashisthg.androidl.widget.ObservableScrollView>